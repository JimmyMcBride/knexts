{
  "name": "knexts",
  "version": "1.0.0",
  "description": "knex, typescript, graphql back end",
  "main": "src/server.ts",
  "repository": "git@github.com:JimmyMcBride/knexts.git",
  "author": "Jimmy McBride",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "node src/server.ts",
    "db-remake": "psql -U postgres -f remakeDatabase.sql",
    "knex-refresh": "knex migrate:rollback && knex migrate:latest && knex seed:run",
    "total-reset": "yarn db-remake && yarn knex-refresh",
    "test": "cross-env DB_ENV=testing jest --verbose --runInBand --forceExit",
    "coverage": "cross-env DB_ENV=testing jest --coverage --detectOpenHandles --forceExit || true"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/node": "^14.0.13",
    "apollo-server-express": "^2.15.0",
    "apollo-server-testing": "^2.15.0",
    "bcrypt": "^5.0.0",
    "graphql-tools": "^6.0.10",
    "graphql-yoga": "^1.18.3",
    "knex": "^0.21.1",
    "pg": "^8.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1"
  },
  "jest": {
    "clearMocks": true,
    "displayName": "TypeScript Knex Server",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**"
    ]
  }
}
