{
  "name": "knexts",
  "version": "1.0.0",
  "description": "knex, typescript, graphql back end",
  "main": "src/index.ts",
  "repository": "git@github.com:JimmyMcBride/knexts.git",
  "author": "Jimmy McBride",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md)\"",
    "db-remake": "psql -U postgres -f remakeDatabase.sql",
    "knex-refresh": "knex migrate:rollback && knex migrate:latest && knex seed:run",
    "total-reset": "yarn db-remake && yarn knex-refresh",
    "test": "cross-env DB_ENV=testing jest --verbose --runInBand --forceExit",
    "coverage": "jest --coverage --detectOpenHandles --forceExit || true"
  },
  "dependencies": {
    "@types/node": "^14.0.13",
    "knex": "^0.21.1",
    "pg": "^8.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4"
  }
}
